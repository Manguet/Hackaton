{% extends 'base.html.twig' %}

{% block title %}Quizz{% endblock %}

{% block body %}
    <div class="mt-5 mb-5 mr-5 ml-5">
        <h2 class="text-center quizzName">{{ quizz_b.name }}</h2>
        <form action="{{ path('answer_jupiter2') }}" method="post" name="quizz_form" class="text-center">
            {% for question in questions %}
                <p class="mt-5 text">{{ loop.index }}- {{ question.content }}</p>
                <input type="checkbox" name="answer{{ loop.index }}" value="good">{{ question.goodAnswer }}</input>
                <br/>
                <input type="checkbox" name="answer{{ loop.index }}" value="false">{{ question.firstFalse }}</input>
                <br/>
                {% if question.secondFalse != null %}
                    <input type="checkbox" name="answer{{ loop.index }}" value="false">{{ question.secondFalse }}</input>
                    <br/>
                {% endif %}
                {% if question.thirdFalse != null %}
                    <input type="checkbox" name="answer{{ loop.index }}" value="false">{{ question.thirdFalse }}</input>
                    <br/>
                {% endif %}
                <br/>
            {% endfor %}
            <button type="submit" class="btn btn-custom mt-5" value="quizz_value">Valider</button>
        </form>
    </div>
{% endblock %}
