<form method="post" action="{{ path('chapter_delete', {'id': chapter.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce chapitre??');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chapter.id) }}">
    <button class="btn btn-custom mt-5">Supprimer</button>
</form>
