{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="h3 mb-5 font-weight-normal text-center">Inscrivez-vous pour commencer l'aventure</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button class="btn btn-custom mt-5">S'enregistrer</button>
        {{ form_end(registrationForm) }}
    </div>
    <div class="container">
        <div class="d-flex flex-row">
            <div class="col-3">
            </div>
            <div class="col-3 earth align-content-end align-middle">
            </div>
            <div class="col-3 spaceship">
            </div>
            <div class="col-3 moon mt-3">
            </div>
        </div>
    </div>
{% endblock %}
