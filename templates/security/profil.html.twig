{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="ml-5 mt-5 mr-5 mb-5">
        <h1 class="text-center">{{ app.user.nickname }}</h1>
        <div class="d-flex justify-content-around mt-5">
            <div>
                <p> Mon adresse mail: {{ app.user.email }}</p>
                <p> Mon mot de passe : ****** </p>
            </div>
            <div>
                <img src="https://www.photoeffets.com/i/3078_photomontage-mettre-votre-visage-sur-un-astronaute-avec-une-.jpg" alt="Profil" class="profil-image mb-5">
            </div>
        </div>
        <p class="text-center">Liste des Badges obtenus :</p>
        <div class="d-flex justify-content-center align-items-center">
            <div class="d-flex mr-5">
                {% for badge in app.user.badges %}
                    <div class="d-flex flex-column align-items-center mr-5">
                        <p>{{ badge.name }}</p>
                        <img src="{{ badge.image }}" alt="{{ badge.name }}" class="profil-badge">
                        <p>{{ badge.description }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <a href="{{ path('profil_updated') }}" class="btn btn-custom mt-3 mb-3">Mettre Ã  jour</a>
        </div>
    </div>
{% endblock %}