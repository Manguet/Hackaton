{% extends 'base.html.twig' %}

{% block title %}Quizz{% endblock %}

{% block body %}
    <div class="mt-5 mb-5 mr-5 ml-5">
        <h2 class="text-center">{{ quizz_a.name }}</h2>
        <form action="{{ path('answer_index') }}" method="post" name="quizz_form">
        {% for question in questions %}
            <p>{{ loop.index }}- {{ question.content }}</p>
            <input type="checkbox">{{ question.goodAnswer }}</input>
                <br>
            <input type="checkbox">{{ question.firstFalse }}</input>
                <br>
            {% if question.secondFalse != null %}
            <input type="checkbox">{{ question.secondFalse }}</input>
                <br>
            {% endif %}
            {% if question.thirdFalse != null %}
            <input type="checkbox">{{ question.thirdFalse }}</input>
                <br>
            {% endif %}
            <br>
        {% endfor %}
        <button type="submit" class="btn btn-custom mt-5" value="quizz_value">Valider</button>
        </form>
    </div>
{% endblock %}
