{% extends 'base.html.twig' %}

{% block title %}Quizz{% endblock %}

{% block body %}
    <div class="mt-5 mb-5 mr-5 ml-5">
        <h2 class="text-center">{{ quizz_a.name }}</h2>
        <form action="#" method="post">
        {% for question in questions %}
            <p>{{ loop.index }}- {{ question.content }}</p>
            <p>{{ question.goodAnswer }}</p>
                <br>
            <p>{{ question.firstFalse }}</p>
                <br>
            {% if question.secondFalse != null %}
            <p>{{ question.secondFalse }}</p>
                <br>
            {% endif %}
            {% if question.thirdFalse != null %}
            <p>{{ question.thirdFalse }}</p>
                <br>
            {% endif %}
        {% endfor %}
        </form>
    </div>
{% endblock %}
