{% extends 'base.html.twig' %}

{% block title %}Multimedia{% endblock %}

{% block body %}
    <div class="mt-5 mb-5 mr-5 ml-5">
        <h1>Multimedia</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ multimedia.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ multimedia.name }}</td>
                </tr>
                <tr>
                    <th>URL</th>
                    <td>{{ multimedia.URL }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('multimedia_index') }}" class="btn btn-custom mr-5">Retour</a>

        <a href="{{ path('multimedia_edit', {'id': multimedia.id}) }}" class="btn btn-custom">Editer</a>

        {{ include('multimedia/_delete_form.html.twig') }}
    </div>
{% endblock %}
