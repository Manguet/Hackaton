<form method="post" action="{{ path('badge_delete', {'id': badge.id}) }}" onsubmit="return confirm('Voulez-vous réèllement supprimer ce badge?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ badge.id) }}">
    <button class="btn btn-custom">Supprimer</button>
</form>
