{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <div class="mt-5 ml-5 mr-5 mb-5">
        <h1>Image Utilisateur</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user_image.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user_image.name }}</td>
                </tr>
                <tr>
                    <th>URL</th>
                    <td>{{ user_image.URL }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('user_image_index') }}" class="btn btn-custom">Retour</a>

        <a href="{{ path('user_image_edit', {'id': user_image.id}) }}" class="btn btn-custom ml-5">Editer</a>

        {{ include('user_image/_delete_form.html.twig') }}
    </div>
{% endblock %}
