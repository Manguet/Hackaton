{% extends 'base.html.twig' %}

{% block title %}Documentations{% endblock %}

{% block body %}

    <div class="mt-5 ml-5 mb-5 mr-5 d-flex">
        <div class="d-flex flex-column border-right col-lg-2 col-md-4">
            <table class="index-documentation">
                <thead>
                    <tr>
                        <th colspan="2">Index des Plan√®tes :</th>
                    </tr>
                </thead>

                <tbody>
                    {% for chapter in chapters %}
                        <tr>
                            <td class="d-flex align-items-center justify-content-center text-center"><img src="{{ chapter.planetImage }}" alt="{{ chapter.name }}" class="planet-size mt-3"></td>
                            <td class="mt-3"><a href="{{ path('documentation_planet', {'id' : chapter.id}) }}"><i class="fas fa-space-shuttle"></i> {{ chapter.name }}</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="col-lg-10 col-md-8 d-flex justify-content-center align-items-center">
            <h2>Veuillez selectionner un chapitre</h2>
        </div>
    </div>
{% endblock %}