{% extends 'base.html.twig' %}

{% block title %}Contenu{% endblock %}

{% block body %}
    <div class="mt-5 mr-5 ml-5 mb-5">
        <h1>Contenu</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ content.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ content.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ content.description }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('content_index') }}" class="btn btn-custom">Retour</a>

        <a href="{{ path('content_edit', {'id': content.id}) }}" class="btn btn-custom ml-5">Editer</a>

        {{ include('content/_delete_form.html.twig') }}
    </div>
{% endblock %}
