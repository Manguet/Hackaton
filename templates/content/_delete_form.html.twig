<form method="post" action="{{ path('content_delete', {'id': content.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer ce contenu?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ content.id) }}">
    <button class="btn btn-custom mt-5">Supprimer</button>
</form>
