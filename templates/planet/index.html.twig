{% extends 'base.html.twig' %}

{% block title %}Planetes{% endblock %}

{% block body %}
    <div class="ml-5 mr-5 mt-5 mb-5">
        <h1>Planètes</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Is_done</th>
                    <th>Is_half</th>
                    <th>Is_off</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for planet in planets %}
                <tr>
                    <td>{{ planet.id }}</td>
                    <td>{{ planet.name }}</td>
                    <td>{{ planet.isDone ? 'Yes' : 'No' }}</td>
                    <td>{{ planet.isHalf ? 'Yes' : 'No' }}</td>
                    <td>{{ planet.isOff ? 'Yes' : 'No' }}</td>
                    <td>{{ planet.description }}</td>
                    <td>
                        <a href="{{ path('planet_show', {'id': planet.id}) }}">Voir</a>
                        <a href="{{ path('planet_edit', {'id': planet.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('planet_new') }}" class="btn btn-custom">Ajouter</a>
    </div>
{% endblock %}
