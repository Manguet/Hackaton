{% extends 'base.html.twig' %}

{% block title %}Planet{% endblock %}

{% block body %}
    <h1>Planet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ planet.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ planet.name }}</td>
            </tr>
            <tr>
                <th>Is_done</th>
                <td>{{ planet.isDone ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_half</th>
                <td>{{ planet.isHalf ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_off</th>
                <td>{{ planet.isOff ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ planet.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('planet_index') }}">back to list</a>

    <a href="{{ path('planet_edit', {'id': planet.id}) }}">edit</a>

    {{ include('planet/_delete_form.html.twig') }}
{% endblock %}
