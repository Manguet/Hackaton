<form method="post" action="{{ path('quizz_delete', {'id': quizz.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce quizz?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quizz.id) }}">
    <button class="btn btn-custom mt-5">Supprimer</button>
</form>
