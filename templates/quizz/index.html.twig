{% extends 'base.html.twig' %}

{% block title %}Quizz{% endblock %}

{% block body %}
    <div class="mt-5 mb-5 mr-5 ml-5">
        <h1>Quizz</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for quizz in quizzs %}
                <tr>
                    <td>{{ quizz.id }}</td>
                    <td>{{ quizz.name }}</td>
                    <td>
                        <a href="{{ path('quizz_show', {'id': quizz.id}) }}">Voir</a>
                        <a href="{{ path('quizz_edit', {'id': quizz.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun r√©sultat</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('quizz_new') }}" class="btn btn-custom">Ajouter</a>
    </div>
{% endblock %}
